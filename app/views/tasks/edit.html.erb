<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
    <h1 class="text-3xl font-bold mb-6 text-center">Edit Task</h1>

    <%= form_with(model: [@list, @task], local: true, class: "space-y-6" ) do |form| %>
      <div class="flex flex-col space-y-2">
        <%= form.label :name, 'Task Name', class: 'text-lg font-semibold' %>
        <%= form.text_field :name, required: true,
                            class: 'border rounded-lg p-2 focus:outline-none focus:ring-2 focus:ring-blue-500' %>
      </div>

      <div class="flex flex-col space-y-2">
        <%= form.label :description, 'Description', class: 'text-lg font-semibold' %>
        <%= form.text_area :description, required: true,
                           class: 'border rounded-lg p-2 focus:outline-none focus:ring-2 focus:ring-blue-500' %>
      </div>

      <div class="flex space-x-4 justify-center">
        <%= form.submit 'Update Task',
                        class: 'bg-blue-500 text-white px-8 py-2 text-lg rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500' %>

        <%= link_to 'Back to Tasks', list_tasks_path(@list),
                    class: 'bg-gray-500 text-white px-8 py-2 text-lg rounded-lg hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-500' %>
      </div>
    <% end %>
  </div>
</div>
