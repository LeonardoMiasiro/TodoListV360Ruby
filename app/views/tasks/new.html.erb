<div class="flex justify-between items-start w-full space-x-10">
  <div class="w-1/3">
    <h1 class="text-3xl font-bold mb-6">Tasks da <%= @list.name %></h1>

    <%= form_with(model: Task.new, url: list_tasks_path(@list), local: true, class: "space-y-5") do |form| %>
      <div>
        <%= form.label :name, class: "block text-lg font-medium mb-1" %>
        <%= form.text_field :name, placeholder: "Name",
                            class: "block w-full shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2" %>
      </div>

      <div>
        <%= form.label :description, class: "block text-lg font-medium mb-1" %>
        <%= form.text_area :description, placeholder: "Description",
                           class: "block w-full shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2" %>
      </div>

      <div>
        <%= form.submit "Create Task",
                        class: "w-full bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
    <% end %>
  </div>

  <div class="w-2/3">
    <table class="w-full border-separate border-spacing-0 text-slate-500">
      <thead>
      <tr>
        <th class="p-3 text-sm font-semibold text-left text-gray-700 bg-gray-200 border-b">Name</th>
        <th class="p-3 text-sm font-semibold text-left text-gray-700 bg-gray-200 border-b">Description</th>
      </tr>
      </thead>
      <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td class="p-3 text-sm text-gray-600 border-b bg-gray-50">
            <%= task.name %>
          </td>
          <td class="p-3 text-sm text-gray-600 border-b bg-gray-50">
            <%= task.description %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <div class="mt-6">
      <%= link_to 'Voltar para as Listas', lists_path,
                  class: 'inline-block bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-500' %>
    </div>
  </div>
</div>
